source 'https://rubygems.org'
ruby "2.1.1"

gem 'rails', '4.0.4'
gem 'jbuilder'
gem 'pg'
gem 'unicorn'

group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'sdoc', require: false
end

# Use ActiveModel has_secure_password
gem 'bcrypt', '~> 3.1.7'

group :development, :test do
  gem 'foreman'
  gem 'factory_girl_rails'
  gem 'rdoc'
  gem 'rspec-rails'
  gem 'sql-logging'
  gem 'pry'
end
